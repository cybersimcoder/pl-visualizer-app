# Server
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.xlsx,.xls,.csv

# Client
REACT_APP_API_URL=http://localhost:5000/api