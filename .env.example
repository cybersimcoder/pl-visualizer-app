# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/pl_visualizer
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pl_visualizer
DB_USER=postgres
DB_PASSWORD=password

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-here
